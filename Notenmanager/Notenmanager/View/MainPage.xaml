<Page x:Class="Notenmanager.View.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Notenmanager.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainPage"
      DataContext="{StaticResource MainPageVM}">

    <Grid Background="White">
        <Button x:Name="btnButton" Command="{Binding NavigationCmd}" CommandParameter="DateiImportPage"  Content="Import Stammdaten" HorizontalAlignment="Left" Margin="98,97,0,0" VerticalAlignment="Top" Width="125"/>
        <Button x:Name="btnMeeensch" Command="{Binding NavigationCmd}" CommandParameter="FachAnlegenPage" Content="Fach anlegen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Margin="98,72,0,0"/>
        <Button x:Name="btnNiten" Command="{Binding NavigationCmd}" CommandParameter="NotenPage" Content="NotenPage" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Margin="98,124,0,0"/>
    </Grid>
</Page>
